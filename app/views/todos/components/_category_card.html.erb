<div class="bg-emerald-100 rounded-lg p-4">
  <h2 class="text-xl font-bold mb-4"><%= category.name %></h2>
  <div class="space-y-2">
    <% category.items.incomplete.each do |item| %>
      <div class="flex items-center gap-2">
        <input type="checkbox"> <span><%= item.name %></span>
      </div>
    <% end %>
    <% category.items.completed.each do |item| %>
      <div class="flex items-center gap-2">
        <input type="checkbox" checked disabled> <span class="line-through"><%= item.name %></span>
      </div>
    <% end %>
  </div>
</div>
